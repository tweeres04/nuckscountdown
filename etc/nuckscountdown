include /etc/nginx/expiresmap.conf;

server {
	server_name nuckscountdown.tweeres.ca;
	return 301 https://$host$request_uri;
}

server {
	listen 443 ssl http2;
	server_name nuckscountdown.tweeres.ca;
	root /var/www/nuckscountdown;
	ssl_certificate /etc/letsencrypt/live/nuckscountdown.tweeres.ca/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/nuckscountdown.tweeres.ca/privkey.pem;
	expires $expires;
	try_files $uri /index.html;

	location /service-worker.js {
		expires epoch;
	}
}
